<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".store.StoreActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#1abc9c">
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/arrow"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/main_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="가게 이름"
        android:textColor="#ffffff"
        android:textSize="22sp" />
    <ImageView
        android:id="@+id/main_btn_bookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/heart_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>
</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="#9abc9c">
    <Button
        android:id="@+id/main_btn_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="메뉴"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/tab"/>
    <Button
        android:id="@+id/main_btn_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="정보"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/tab"/>
    <Button
        android:id="@+id/main_btn_review"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="리뷰"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/tab"/>

</LinearLayout>
<FrameLayout
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</FrameLayout>

</LinearLayout>